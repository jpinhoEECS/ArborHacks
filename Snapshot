	 	   	var studentInfo = {

	 	   		jason : {

	 	   			schedule : ["eat","drink","poo"],

	 	   			grades : {
	 	   				english: 10,
	 	   				math: 0

	 	   			}

	 	   			notes: {
	 	   				class1: link_to_class1_notes
	 	   				//
	 	   			}

