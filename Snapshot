		<script>
	 	   	function username_and_password_prompt() {
	 	   		var first = document.getElementById("first_name").value;
	 	   		var username = prompt("Username:", "");
	 	   		var password = prompt("Password:", "");
	 	   		document.getElementById("below_main_title").innerHTML = "Welcome " + first + "!";
	 	   	}

	 	   	var studentInfo = {

	 	   		jason : {

	 	   			schedule : ["eat","drink","poo"],

	 	   			grades : {

	 	   				english: 10,
	 	   				math: 0

	 	   			}

	 	   		}

	 	   	};

	 	   	function getStudentSchedule(name){

	 	   		return studentInfo[name].schedule;

	 	   	}

	 	   	function parseScheudule(data){

	 	   		var ul = document.createElement('ul');

	 	   		for (var i = data.length - 1; i >= 0; i--) {
	 	   			var course = data[i];
	 	   			var li = document.createElement('li');
	 	   			li.innerHTML = course;
	 	   			ul.appendChild(li);
	 	   		}

	 	   		document.getElementById('daily-schedule').appendChild(ul);

	 	   	}

	 	   	parseScheudule(getStudentSchedule('jason'));

 	    </script>
