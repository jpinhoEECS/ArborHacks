	 	   	function getStudentSchedule(name) {
	 	   		return studentInfo[name].schedule;
	 	   	}//getStudentSchedule()


	 	   	function parseSchedule(data) {
	 	   		// create empty unordered_list to hold courses
	 	   		var ul = document.createElement('ul');

	 	   		// get student schedule in the order it's listed and
	 	   		// add each element to the unordered list	
	 	   		for (var i = 0; i < data.length; i++) {
	 	   			var course = data[i];
	 	   			var li = document.createElement('li');
	 	   			li.innerHTML = course;
	 	   			ul.appendChild(li);
	 	   		}

	 	   		// add entire schedule to the 'daily-schedule' tile
	 	   		document.getElementById('daily-schedule').appendChild(ul);

	 	   	}//parseSchedule()


	 	   	function getStudentToDo(name) {
	 	   		return studentInfo[name].todolist;
	 	   	}//getStudentToDo()


	 	   	function parseToDo(data) {
	 	   		// create empty unordered_list to hold to do list items
	 	   		var ul = document.createElement('ul');

	 	   		// get to do list in the order it's listed and
	 	   		// add each element to the unordered list	
	 	   		for (var i = 0; i < data.length; i++) {
	 	   			var course = data[i];
	 	   			var li = document.createElement('li');
	 	   			li.innerHTML = course;
	 	   			ul.appendChild(li);
	 	   		}
	 	   		// FIXME: would like to add checkboxes to list

	 	   		// add entire schedule to the 'to-do-list' tile
	 	   		document.getElementById('to-do-list').appendChild(ul);

	 	   	}//parseToDo()


	 	   	function getStudentGrades(name) {
	 	   		return studentInfo[name].grades;
	 	   	}//getStudentToDo()


	 	   	function parseGrades(data) {
	 	   		// create empty unordered_list to hold grades
	 	   		var ul = document.createElement('ul');

	 	   		// get current grades in the order it's listed and
	 	   		// add each element to the unordered list	
	 	   		for (var i = 0; i < data.length; i++) {
	 	   			var course = data[i];
	 	   			var li = document.createElement('li');
	 	   			li.innerHTML = course;
	 	   			ul.appendChild(li);
	 	   		}

	 	   		// add entire schedule to the 'current-grades' tile
	 	   		document.getElementById('current-grades').appendChild(ul);

	 	   	}//parseGrades()


	 	   	function getStudentNotes(name) {
	 	   		return studentInfo[name].notes;
	 	   	}//getStudentNotes()


	 	   	function parseNotes(data) {
	 	   		// create empty unordered_list to hold grades
	 	   		var ul = document.createElement('ul');

	 	   		// get current grades in the order it's listed and
	 	   		// add each element to the unordered list	
	 	   		for (var i = 0; i < data.length; i++) {
	 	   			var course = data[i];
	 	   			var li = document.createElement('li');
	 	   			li.innerHTML = course;
	 	   			ul.appendChild(li);
	 	   		}

	 	   		// add entire schedule to the 'course-notes' tile
	 	   		document.getElementById('course-notes').appendChild(ul);

	 	   	}//parseNotes()


	 	   	// load all of the tiles based on name entered 
	 	   	// (this function should be called when user clicks "Login")
	 	   	function loadAllTiles() {
	 	   		var input = $('.user_first_name');
	 	   		var name = input.val();

	 	   		// adds a custom welcome message below the main title
	 	   		document.getElementById("below_main_title").innerHTML = "Welcome " + name + "!";

	 	   		// get the student's SCHEDULE, parse it, and put it into tile
	 	   		parseSchedule(getStudentSchedule(name));

	 	   		// get the student's TO DO LIST, parse it, and put it into tile
	 	   		parseToDo(getStudentToDo(name));

	 	   		// get the student's CURRENT GRADES, parse it, and put it into tile
	 	   		parseGrades(getStudentGrades(name));

	 	   		// get the student's COURSE NOTES, parse it, and put it into tile
	 	   		parseNotes(getStudentNotes(name));

	 	   	}//loadAllTiles()
	 	   	

